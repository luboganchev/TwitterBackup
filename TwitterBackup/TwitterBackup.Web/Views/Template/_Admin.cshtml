<div class="row jumbotron">
    <div class="col-md-4 text-center">
        <div>
            <strong>Total friends</strong>
        </div>
        <div>
            <span>{{adminData.FriendsCount}}</span>
        </div>
    </div>

    <div class="col-md-4 text-center">
        <div>
            <strong>Total downloaded tweets</strong>
        </div>
        <div>
            <span>{{adminData.DownloadedTweetsCount}}</span>
        </div>
    </div>

    <div class="col-md-4 text-center">
        <div>
            <strong>Total retweets</strong>
        </div>
        <div>
            <span>{{adminData.RetweetsCount}}</span>
        </div>
    </div>
</div>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th></th>
            <th class="text-center">Id</th>
            <th class="text-center">Name</th>
            <th class="text-center">Description</th>
            <th class="text-center">Favorite tweets count</th>
            <th class="text-center">Downloaded tweets in TwitterBackup</th>
            <th class="text-center">Retweets in TwitterBackup</th>
        </tr>
    </thead>
    <tbody>
        <tr ng-repeat="friend in adminData.Friends" ng-class-even="'active'">
            <td><img ng-src="friend.ProfileImageUrl" class="img-rounded" /></td>
            <td class="text-center">{{friend.Id}}</td>
            <td class="text-center">{{friend.Name}} (@@{{friend.ScreenName}})</td>
            <td class="text-center">{{friend.Description}}</td>
            <td class="text-center">{{friend.FavoritesCount}}</td>
            <td class="text-center">{{friend.DownloadedPostCount}}</td>
            <td class="text-center">{{friend.RetweetsCount}}</td>
        </tr>
    </tbody>
</table> 